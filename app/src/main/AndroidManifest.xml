        </activity>
        <activity android:name=".AnotherActivity"/>
        <activity
            android:name=".kotin.MainKotlinActivity"
            android:label="@string/title_activity_main_kotlin">
        </activity>
        <activity
            android:name=".kotin.AnotherKotlinActivity"
            android:label="@string/title_activity_another_kotlin">
        </activity>
    </application>

</manifest>